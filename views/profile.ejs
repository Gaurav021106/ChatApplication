<%- include('components/header') %>
  <div class="h-screen w-full">
    <p>Profile page</p>
    <div class="flex flex-col items-center justify-center h-[35vh]">
      <div class="w-[10vh] h-[10vh] rounded-full overflow-hidden mb-3">
        <img src="<%= currentUser.profilePicture || '/images/default.jpg' %>" alt="profile"
          class="w-full h-full object-cover">
      </div>
      <h1 class="font-bold text-xl mb-1">
        <%= currentUser.FullName %>
      </h1>
      <p class="text-sm text-gray-700 mb-1">@<%= currentUser.username %>
      </p>
      <p class="text-sm text-gray-700">Phone: <%= currentUser.PhoneNumber %>
      </p>
    </div>
  </div>
  <%- include('components/footer') %>