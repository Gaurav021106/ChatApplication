<%- include('components/header') %>

<div class="w-full h-screen bg-[#ABABAB] flex flex-col">

  <!-- Header -->
  <header class="h-[8vh] bg-[#D7D7D7] flex items-center rounded-b-3xl justify-between px-6 shadow">
    <!-- Left: Logo + Title -->
    <div class="flex items-center">
      <a href="#"><img src="/images/logo.jpg" class="w-[6vh] h-[6vh] rounded-full" alt="logo"></a>
      <h1 class="text-2xl font-bold ml-6">ChatRoom</h1>
    </div>

    <!-- Right: Dropdown -->
    <div class="relative inline-block" id="dropdownWrapper">
      <button id="dropdownButton" aria-haspopup="true" aria-expanded="false"
        class="flex items-center hover:cursor-pointer">
        <div class="w-[6vh] h-[6vh] rounded-full overflow-hidden">
          <img src="<%= currentUser.profilePicture || '/images/default.jpg' %>" alt="profile"
            class="w-full h-full object-cover">
        </div>
        <svg viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-gray-500 ml-2">
          <path
            d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" />
        </svg>
      </button>
      <!-- Dropdown Menu -->
      <div id="dropdownMenu"
        class="hidden absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg z-50 transition transform opacity-0 scale-95 duration-200 ease-out">
        <a href="/home" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Home</a>
        <a href="/profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Profile</a>
        <a href="/" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Add Account</a>
        <a href="/logout" class="block px-4 py-2 text-red-600 hover:bg-gray-100">Logout</a>
      </div>
    </div>
  </header>

  <!-- Main Layout -->
  <main class="flex flex-row gap-2 flex-1 px-2 mt-2 overflow-hidden">

    <!-- Left: Profile Section -->
    <div id="Users" class="bg-[#D7D7D7] w-[22%] rounded-3xl p-2 h-full shadow flex flex-col items-center text-center">
      <input type="text" placeholder="Search users..."
        class="rounded-2xl bg-white border-none text-center px-2 mb-3 h-[5vh] w-full shadow-sm">
      <div class="flex-1 w-full bg-gray-100 p-3 rounded-2xl overflow-y-auto">
        <% if (currentUser.friends.length===0) { %>
          <p class="text-center text-gray-500 mt-3">No friends added</p>
        <% } %>
        <ul>
          <% currentUser.friends.forEach(friend=> { %>
            <li class="border-b border-gray-200 py-2">
              <a href="/profile/<%= friend._id %>" class="text-blue-500 hover:underline">
                <%= friend.FullName %>
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>

    <!-- Center: Chat Area -->
    <div id="chat-area" class="bg-[#D7D7D7] w-[58%] h-full rounded-3xl shadow flex flex-col">
      <!-- Chat Header -->
      <div class="w-full h-[8vh] bg-gray-100 rounded-t-3xl flex items-center px-4">
        <div class="user-details w-[6vh] h-[6vh] rounded-full bg-black hover:cursor-pointer"></div>
        <div class="flex flex-col p-3">
          <h1 class="font-semibold text-xl">username</h1>
          <p>message</p>
        </div>
      </div>
      <!-- Messages -->
      <div class="flex-1 p-4 overflow-y-auto flex flex-col space-y-3">
        <div class="flex justify-start">
          <div class="bg-white px-4 py-2 rounded-2xl shadow">Hello ðŸ‘‹</div>
        </div>
        <div class="flex justify-end">
          <div class="bg-green-200 px-4 py-2 rounded-2xl shadow">Hi, how are you?</div>
        </div>
      </div>
      <!-- Input -->
      <div class="p-3 bg-[#ECECEC] rounded-b-3xl">
        <form class="flex gap-2">
          <input type="text" placeholder="Type a message..."
            class="flex-1 rounded-full px-4 py-2 outline-none focus:ring-2 focus:ring-green-500">
          <button type="submit"
            class="px-4 py-2 bg-green-500 text-white rounded-full hover:bg-green-600 transition">Send</button>
        </form>
      </div>
    </div>

    <!-- Right: Chat Bot -->
    <div class="bg-[#D7D7D7] w-[22%] rounded-3xl h-full shadow flex flex-col">
      <!-- Header -->
      <div class="w-full h-[7vh] text-xl bg-gray-100 rounded-t-3xl font-semibold flex items-center justify-center">
        <h1>Chat Bot</h1>
      </div>
      <!-- Chat Body -->
      <div class="w-full flex-1 bg-green-200 overflow-y-auto p-2 flex flex-col">
        <div class="bg-white p-2 rounded-lg shadow mb-2 self-start">Hello ðŸ‘‹</div>
        <div class="bg-blue-500 text-white p-2 rounded-lg shadow mb-2 self-end">Hi! How can I help?</div>
      </div>
      <!-- Footer -->
      <div class="w-full h-[7vh] bg-gray-100 rounded-b-3xl flex items-center gap-2 px-2">
        <div class="size-10 rounded-full bg-black"></div>
        <input type="text" class="flex-1 border-none outline-none text-sm font-medium px-3 py-2 rounded-full"
          placeholder="Type a message...">
        <div class="size-10 rounded-full bg-black"></div>
      </div>
    </div>
  </main>
</div>

<!-- Dropdown Script -->
<script>
  const button = document.getElementById('dropdownButton');
  const menu = document.getElementById('dropdownMenu');
  button.addEventListener('click', () => {
    const expanded = button.getAttribute("aria-expanded") === "true" || false;
    button.setAttribute("aria-expanded", !expanded);
    menu.classList.toggle('hidden');
    menu.classList.toggle('opacity-0');
    menu.classList.toggle('scale-95');
  });
  window.addEventListener('click', (e) => {
    if (!document.getElementById('dropdownWrapper').contains(e.target)) {
      menu.classList.add('hidden', 'opacity-0', 'scale-95');
      button.setAttribute("aria-expanded", "false");
    }
  });
</script>

<%- include('components/footer') %>
